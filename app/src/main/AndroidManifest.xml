<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifspsaocarlos.sdm.what_ifsp_zap" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar" >
        <provider
            android:name=".provider.ContatoProvider"
            android:authorities="br.edu.ifspsaocarlos.sdm.agenda.provider"
            android:exported="true" >
        </provider>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!--Seta a activity defaultpara searchable-->
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activity.SearchActivity" />
        </activity>
        <activity
            android:name=".activity.DetalheActivity"
            android:label="@string/title_activity_detalhe" >
        </activity>
        <activity
            android:name=".activity.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <!--android:launchMode="singleTop"  para quando chamar ela mesma e nÃ£o criar outra-->
        <activity
            android:name=".activity.SearchActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>


        <activity
            android:name=".activity.SignupActivity"
            android:label="Signup" >

            <!-- Define como MAIN activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
